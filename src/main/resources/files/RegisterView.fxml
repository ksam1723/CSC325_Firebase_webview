<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.csc325_firebase_webview_auth.view.RegisterController"
            prefWidth="400" prefHeight="350">
    <children>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <Label text="Register Account" style="-fx-font-size: 20px;" />
                <TextField fx:id="emailField" promptText="Email" maxWidth="200"/>
                <PasswordField fx:id="passwordField" promptText="Password" maxWidth="200"/>
                <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" maxWidth="200"/>
                <Button text="Register" onAction="#handleRegister"/>
                <Button text="Back to Menu" onAction="#handleBack" />
            </children>
        </VBox>
    </children>
</AnchorPane>